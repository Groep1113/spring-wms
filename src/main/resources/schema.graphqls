type User {
    id: Int!
    firstName: String!
    lastName: String!
    email: String!
}

type LoginPayload {
  token: String
  user: User
}

type Query {
    users: [User]!
    userByMail(email: String!): User
	user(id: Int!): User
}

type Mutation {
    login(email: String!, password: String!): LoginPayload
}